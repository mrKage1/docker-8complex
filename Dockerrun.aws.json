{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
      {
        "name": "client",
        "image": "mbmmbm/complex-client",
        "hostname": "client",
        "essential": false,
	"memory": 128
      },
      {
	"name": "server",
	"image": "mbmmbm/complex-server",
	"hostname": "api",
	"essential": false,
	"memory": 128
      },
      {
	"name": "worker",
        "image": "mbmmbm/complex-worker",
        "hostname": "worker",
        "essential": false,
	"memory": 128
      },
      {
	"name": "nginx",
        "image": "mbmmbm/complex-nginx",
        "hostname": "nginx",
        "essential": true,
	"memory": 128,
	"portMappings": [ { "hostPort": 80, "containerPort": 80	} ],
	"links": ["client", "server"]
      }
  ]

}

